@using System.ServiceModel.Description
@using System.Web.Optimization
@model RealEstate.Web.Models.AccountProfileModel

@{
    Layout = "~/Views/shared/_BootstrapLayout.basic.cshtml";
}



<div class="hero-unit">
   
    <div class="row">
        <div class="span3">
            <img src="~/Content/images/profpic.JPG" alt="Foto de la persona">
        </div>
        <div class="span5" style="text-align:right; margin-left: 20% " align="right"><h1> @Model.FirstName @Model.LastName</h1></div>
    </div>
    
</div>


<div class="row-fluid">
    <div class="span4 form-contact">
        <h3>Personal Info</h3>
        <p>Fecha de nacimiento: @Model.BirthDay</p>
        <p>Propiedades En venta: </p>
        <p>Propiedades vendidas:</p>
        <br>
        <h3>Contact</h3>
        <p>Facebook: @Model.Facebook</p>
        <p>Twitter: @Model.Twitter</p>
        <p>Google+: @Model.Googleplus</p>
    </div>
    <div class="span8">
        
            @{
                foreach (var propiedad in Model.ListaProperties)
                {
            
                    <div class="hero-unit2">
                        
                    </div>
                }
            }
                
        
    </div>

</div>
