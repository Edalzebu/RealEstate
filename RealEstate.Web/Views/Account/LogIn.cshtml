@model RealEstate.Web.Models.AccountLoginModel

@{
    ViewBag.Title = "LogIn";
    Layout = "~/Views/shared/_BootstrapLayout.Login.cshtml";
}

<div style="text-align: right"> @Html.ActionLink("Registrarse", "Register", null, new { @class = "btn btn-success " })</div>
<br>

<div style="align-items: center;">
    <div style=" width: 350px;">

        @using (@Html.BeginForm("LogIn", "Account", FormMethod.Post, new { @class = "form-signin" }))
        {

            <h2 class="form-signin-heading">Ingresa</h2>
            @Html.TextBoxFor(x => x.Email, new { @class = "input-block-level" })
            @Html.PasswordFor(x => x.Password, new { @class = "input-block-level" })
            <label class="checkbox">
                <input type="checkbox" value="remember-me"> Mantener sesion abierta
            </label>

            <button class="btn btn-primary" type="submit">Ingresar</button>

            <div style="left:50px">
                @Html.ActionLink("Olvido su contraseña?", "RecoverAccount", "Account")
            </div>

        }
    </div>
    <div style="width: 300px;">
        <img src="~/Content/images/banner-grandes-paisajes.jpg" width="800" height="200" alt="Una foto bonita que no cargo :(">
    </div>

</div>




