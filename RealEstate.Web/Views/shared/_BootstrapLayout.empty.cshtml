@using System.Web.Optimization
@using BootstrapSupport
@using NavigationRoutes
<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8">
    <title>@ViewBag.Title</title>
    

    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link href="@Styles.Url("~/content/css")" rel="stylesheet"/>
    <style type="text/css">
      body {
        padding-top: 40px;
        padding-bottom: 40px;
        /*background: url('http://image.shutterstock.com/display_pic_with_logo/107677/107677,1303761952,1/stock-photo-beautiful-loving-couple-walking-outdoor-75940909.jpg');*/
        /*background-color: rgba(111, 165, 247, 0.98);*/
        background-color: #f7f7f7;
        background-repeat:no-repeat;
        display: compact;
        background-size: cover;
      }

      .form-signin {
        max-width: 300px;
        padding: 19px 29px 29px;
        margin: 0 auto 20px;
        background-color: #fff;
        border: 1px solid #e5e5e5;
        -webkit-border-radius: 5px;
           -moz-border-radius: 5px;
                border-radius: 5px;
        -webkit-box-shadow: 0 1px 2px rgba(0,0,0,.05);
           -moz-box-shadow: 0 1px 2px rgba(0,0,0,.05);
                box-shadow: 0 1px 2px rgba(0,0,0,.05);
      }
      .form-signin .form-signin-heading,
      .form-signin .checkbox {
        margin-bottom: 10px;
      }
      .form-signin input[type="text"],
      .form-signin input[type="password"] {
        font-size: 16px;
        height: auto;
        margin-bottom: 15px;
        padding: 7px 9px;
      }

    </style>    <link href="@Styles.Url("~/Content/css-responsive")" rel="stylesheet" type="text/css" />
    @RenderSection("head", required: false)
    @Html.Partial("_html5shiv")
    @* favicons and touch icons go here *@
</head>
    <body>
        
        <div class="container">
            <div style="text-align:center;">
                <img src="~/Content/images/Logo_homeown.png" width="100" height="100" />

            </div>
            @Html.Partial("_alerts")
            @RenderBody()
            <br/>
            <hr>
        
            <footer style="text-align: center;">
                <p>&copy; BrainRain Webpages @System.DateTime.Now.ToString("yyyy")</p>
            </footer>

        </div> <!-- container -->
        @Scripts.Render("~/js")
        @RenderSection("Scripts", required: false)
    </body>
</html>

