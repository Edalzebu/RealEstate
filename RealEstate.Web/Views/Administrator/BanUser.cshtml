@model RealEstate.Web.Models.Administrator.BanUserModel


<div class="modal-header">
    <button type="button" class="close" data-dismiss="modal" aria-hidden="true">×</button>
    <h4 id="myModalLabel">Esta seguro que desea bloquear a este usuario?</h4>
</div>

@using (Html.BeginForm("BanUser", "Administrator", FormMethod.Post, new { @class = "modal-form" }))
{
@Html.ValidationSummary()

    <div  class="modal-body">
        <p> Se  le enviara un correo al usuario informando porque se ha baneado.</p>
        <div class="text-info">
            <ul>
                <li>ID: @Html.EditorFor(x=>x.id)</li>
                <li>Correo: @Html.EditorFor(x=>x.Email)</li>
                <li>Usuario: @Html.EditorFor(x=>x.UserName)</li>
                <li>Nombre: @Html.EditorFor(x=>x.FirstName), @Html.EditorFor(x=>x.LastName)</li>
                <li>Miembre desde: @Html.EditorFor(x=>x.MemberSince)</li>
            </ul>
        </div>
        <fieldset class="form-horizontal">
            <legend> Razon</legend>
            @Html.LabelFor(x=>x.BanReason, new { @class = "control-label" })
            <div class="controls">
                @Html.EditorFor(x=>x.BanReason, new { @class = "input-xlarge" })
                @Html.ValidationMessageFor(x=>x.BanReason, null, new { @class = "help-inline" })
            </div>
        </fieldset>
    </div>

<div class="modal-footer">
    <button class="btn" data-dismiss="modal" aria-hidden="true">Cancelar</button>
    <button class="btn btn-danger" type="submit">Banear</button>
</div>

}